#include "fsm_automatic_2.h"
//int temp = 0;

int timeTimer(int time){
	return time * 1000;
}

void fsm_automatic_2_run(){
	switch (status_2){
	case INIT:
		SetOffHor();
		status_2 = AUTO_GREEN;
		//temp = timeredver * 1000;
		led34 = timegreen;
		setTimer2(timeTimer(timegreen));
		break;
	case AUTO_RED :
		SetRedHor();
		if (timer2_flag == 1){
			status_2 = AUTO_GREEN;
			led34 = timegreen;
			setTimer2(timeTimer(timegreen));
		}

//		if (isButton1flag() == 1){
//			status = MAN_RED;
//			setTimer1(1000);
//		}

		break;
	case AUTO_GREEN:

		SetGreenHor();
		if (timer2_flag == 1){
			status_2 = AUTO_YELLOW;
			led34 = timeyellow;
			setTimer2(timeTimer(timeyellow));
		}

//		if (isButton1flag() == 1){
//			status = MAN_GREEN;
//			setTimer1(1000);
//		}

		break;
	case AUTO_YELLOW:
		SetYellowHor();
		if (timer2_flag == 1){
			status_2 = AUTO_RED;
			led34 = timered;
			setTimer2(timeTimer(timered));
		}
//		if (isButton1flag() == 1){
//			//button1_flag = 0;
//			status = MAN_YELLOW;
//			setTimer1(1000);
//		}
		break;
	default:
		break;
	}

}


